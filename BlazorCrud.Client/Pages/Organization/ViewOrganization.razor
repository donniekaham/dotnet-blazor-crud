@page "/organization/view/{Id}"
@inject HttpClient Http
@inject LocalStorage Storage
@inject Microsoft.AspNetCore.Components.NavigationManager UriHelper

<h1>View</h1>
<h3>Organization</h3>

<br />
<div class="col-md-6">
    <BSTable IsResponsive="true" class="table">
        <tr>
            <td>Id</td>
            <td>@organization.Id</td>
        </tr>
        <tr>
            <td>Name</td>
            <td>@organization.Name</td>
        </tr>
        <tr>
            <td>Type</td>
            <td>@organization.Type</td>
        </tr>
        <tr>
            <td>Active</td>
            <td>@organization.IsActive</td>
        </tr>
    </BSTable>
    <div class="form-group">
        <button class="btn btn-primary" @onclick="back">Back</button>
    </div>
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    protected Organization organization = new Organization();

    protected override async Task OnInitializedAsync()
    {
        organization = await Http.GetJsonAsync<Organization>(Storage.GetItem("environment_uri") + "/organization/" + Convert.ToInt32(Id));
    }

    void back()
    {
        UriHelper.NavigateTo("/organization/list/1");
    }
}